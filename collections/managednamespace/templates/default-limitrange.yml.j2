apiVersion: v1
kind: LimitRange
metadata:
  name: resource-limits
  namespace: "{{ namespace_name }}"
spec:
  limits:
    - type: "Pod"
      max:
        cpu: "1" 
        memory: "1Gi" 
      min:
        cpu: "200m" 
        memory: "6Mi" 
    - type: "Container"
      max:
        cpu: "1" 
        memory: "1Gi" 
      min:
        cpu: "200m" 
        memory: "6Mi" 
      default:
        cpu: "1" 
        memory: "1Gi" 
      defaultRequest:
        cpu: "500m" 
        memory: "500Mi" 
